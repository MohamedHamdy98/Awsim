<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeOfFoodActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="16dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:text="@string/fish"
                                android:textColor="@color/blackfont"
                                android:textSize="6sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button_fish"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector_style"
                                android:drawableStart="@drawable/ic_fish"
                                android:drawablePadding="2dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/view"
                                android:textAllCaps="false"
                                android:textColor="@color/lightorang"
                                android:textSize="6sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="16dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:text="@string/gril"
                                android:textColor="@color/blackfont"
                                android:textSize="6sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button_gril"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector_style"
                                android:drawableStart="@drawable/ic_gril"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/view"
                                android:textAllCaps="false"
                                android:textColor="@color/lightorang"
                                android:textSize="6sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="16dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:text="@string/koshary"
                                android:textColor="@color/blackfont"
                                android:textSize="6sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button_koshary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector_style"
                                android:drawableStart="@drawable/ic_sauce"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/view"
                                android:textAllCaps="false"
                                android:textColor="@color/lightorang"
                                android:textSize="6sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="16dp"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:text="@string/pizza"
                                android:textColor="@color/blackfont"
                                android:textSize="6sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button_pizza"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_selector_style"
                                android:drawableStart="@drawable/ic_pizza"
                                android:fontFamily="@font/cairo_bold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:drawablePadding="10dp"
                                android:text="@string/view"
                                android:textAllCaps="false"
                                android:textColor="@color/lightorang"
                                android:textSize="6sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>